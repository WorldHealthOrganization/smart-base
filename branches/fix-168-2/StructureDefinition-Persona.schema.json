{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://worldhealthorganization.github.io/smart-base/branches/copilot/fix-168-2/StructureDefinition-Persona.schema.json",
  "title": "Persona (DAK)",
  "description": "Logical Model for representing Personas from a DAK",
  "type": "object",
  "properties": {
    "resourceType": {
      "type": "string",
      "const": "Persona",
      "description": "Resource type identifier for Persona logical model"
    },
    "id": {
      "type": "string",
      "description": "An identifier or code for the requirement"
    },
    "name": {
      "type": "string",
      "description": "Name"
    },
    "description": {
      "type": "string",
      "description": "Description of the persona"
    },
    "ISCO": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "ISCO Code"
    },
    "type": {
      "$ref": "ValueSet-SGPersonaTypesVS.schema.json",
      "description": "Persona Types: Key/Related/System/Hardware Device"
    }
  },
  "required": [
    "resourceType",
    "id",
    "name",
    "description",
    "type"
  ],
  "resourceDefinition": "http://smart.who.int/base/StructureDefinition/Persona",
  "fhir:parent": "http://hl7.org/fhir/StructureDefinition/Base"
}